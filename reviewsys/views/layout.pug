  body
    .jumbotron.text-center.logInDisplay
      .card
        .card-body
          i.ionicons.ion-log-in#logInLogo 
          p FeedBack System
          hr
          .alert.alert-success#regSucc
            b Success
            .glyphicon.glyphicon-remove#close_error
		
          .alert.alert-danger#err
            b Error
            .glyphicon.glyphicon-remove#close_error
					
          #inputRegisterFeilds
            input(type='text', name="name", placeholder="Name" )
            input(type='text', name="username", placeholder="Username" )
            input(type='password', name="password", placeholder="Password")
            input(type='password', name="cnfrm_password", placeholder="Confirm Password")
            select#typeSelect
              option(value='', selected='selected') User
              option(value='1') Owner
              option(value='2') Admin
            div(style="text-align:center;padding:15px;")
              button.showReply(id="registerBtn" type="submit" name="submit") Register
            .modal-footer
              .options
                p
                  | Already a member ? 
                  span#logInLink LogIn 

          #inputLoginFeilds
            input(type='text', name="username", placeholder="Username" )
            input(type='password', name="password", placeholder="Password")
            div(style="text-align:center;padding:15px")
              button.showReply(id="logInBtn" type="submit" name="submit") LogIn
            .modal-footer
              .options
                p
                  | Not a member? 
                  span#signUpLink Sign Up

    
    .jumbotron.rHeader
      .sHeader
        a.sHeaderLogo
          img#sImgHeader(src='./images/logo.png', alt='Review System')
        div(style='width:100%')
          div(style='width:100%')
            a.sHeaderLogo(href='./index.html', title='Go to Intermine Search Home Page')
              img#sImgHeaderMobile(src='./images/logo.png', alt='Review System')
          form#sForm(method='get', action='result.html')
            div
              .sInpt
                input#sBar(name='sQuery', type='text', placeholder='Search Here..', autocomplete='off')
                button#sBtn(type='submit')
                  i#sBtnIcon.ionicons.ion-ios-search-strong
              #logoutLogo
                i.ionicons.ion-log-out
            .jumbotron.text-center.mMines(style='display:none')
              #mMines
                #mClose
                  i.ionicons.ion-close-circled
                #mNum
                  p Results per mine 
                  input(name='mSearchNum', type='number', placeholder='10', autocomplete='off')
                hr
                #mNeighboursList
                hr
                #mMineList
                hr
                .sInptBtn
                  button#sInptBtn(type='submit') Search All
          div
            .rTool
              div(style='display:inline-flex')
                p.rToolBtns.rToolBtnActive.showAll Restaurants
                p.rToolBtns.fMines Users
                
              div(style='display:inline-flex')
                p.rToolBtns.mSearch Add
    
    #mainResults
      .sResults
        #recentSearch
          #rLog
            #numberResults
            div
              .dropdown
                button#fScore.dropdown-toggle(type='button', data-toggle='dropdown', aria-expanded='false')
                  | Filter&nbsp&nbsp 
                  i.ionicons.ion-funnel(title='Filter')
                ul.dropdown-menu(role='menu', aria-labelledby='menu1')
                  each val, index in ["fourUpRate", "threeUpRate", "twoUpRate", "oneUpRate"]
                    button.fBtn(id=val tabindex='-1')
                      i#fInd.fa.fa-chevron-circle-right
                      .star-ratings-css
                        .star-ratings-css-top
                          - for(var i = 4; i > index; i--) {
                              span(style='color: #22dbf4d;') ★
                          - }
                          - for(var i = 0; i <= index; i++) {
                              span(style='color: #d1d5da;') ★
                          - }
                      p
                        | & Up
                    - if(index<3)
                        li.divider(role='presentation')
                  
                  #rmFilterDiv
                    li.divider(role='presentation')
                    button#removeFilter.fBtn(tabindex='-1')
                      i#removeFilterBtn.ionicons.ion-close-round
                      p
                        | Remove Filter
      
